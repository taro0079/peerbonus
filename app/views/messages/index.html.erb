<p style="color: green"><%= notice %></p>

<% content_for :title, "Messages" %>

<h1>Messages</h1>

<div id="messages">
<table>
    <tr>
        <th>ID</th>
        <th>From</th>
        <th>To</th>
        <th>Content</th>
    </tr>
  <% @messages.each do |message| %>
    <%= render message %>
  <% end %>
</table>
</div>

<%= link_to "New message", new_message_path %>
