<h1>Give points to <%= @user.name %></h1>

<%= form_with url: give_point_user_path(@user), method: :post do |form| %>
  <div>
    <%= label_tag :point_amount, "giving point" %>
    <%= number_field_tag :point_amount, nil, min: 1 %>
    <div>
      <%= label_tag :sender_id, "sender" %>
      <%= select_tag :sender_id, options_from_collection_for_select(@from_users, :id, :name) %>
    </div>
    <div>
      <%= label_tag :message_content, "message" %>
      <%= form.text_area :message_content, name: "message_content" %>
    </div>
  </div>
  <div>
    <%= form.submit "ポイントを付与" %>
  </div>
<% end %>
